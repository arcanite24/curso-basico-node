extends ../layout.pug

block contenido
  form(method="post", action="/user/edit/" + user.id)
    .row
      .col-md-12
        h4 Editar Usuario
      .col-md-6.form-group
        label Nombre
        input(type="text", name="nombre", value="").form-control
      .col-md-6.form-group
        label Edad
        input(type="number", name="edad").form-control
      .col-md-6
        strong Sexo 
        label.radio-inline
          input(type="radio", name="sexo", value="0")
          | Masculino
        label.radio-inline
          input(type="radio", name="sexo", value="1")
          | Femenino
      .col-md-6.form-group
        label Fecha de nacimiento
        input(type="date", name="fechaNacimiento").form-control
      .col-md-12
        button(type="submit").btn.btn-primary Agregar Usuario
